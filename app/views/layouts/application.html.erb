<!DOCTYPE html>
<html>
<head>
  <title>Snaption</title>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">


  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<nav class="navbar navbar-color" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Snaption</a>
    </div>


    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">







        <%if !kenny_loggins%>

          <li><%=link_to "Sign Up", new_user_path%></li>

        <%else%>

          <li><%=link_to "Edit Profile", ""%></li>
          <li><%=link_to "Logout", logout_path, {:method => :delete }%></li>

        <%end%>

      </ul>
      <%if !kenny_loggins%>

        <%@user = User.new%>

        <%=form_for @user, url: login_path, html: {class: "navbar-form navbar-right", role: 'form'}  do |f|%>
          <div class="form-group">
            <%=f.label :email, class:'sr-only'%>
            <%=f.text_field :email, placeholder: "username or email", class:'form-control'%>
          </div>
          <div class="form-group">
            <%=f.label :password, class:'sr-only'%>
            <%=f.text_field :password, placeholder: "password", class:'form-control', type:'password'%>
          </div>
          <%=f.submit "Login", class:'btn btn-default'%>
        <%end%>
        <ul class="nav navbar-nav navbar-right">
          <li><%=link_to "Forgot Password", ""%></li>
        </ul>
      <%end%>


    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>



<body>

<div class='container-fluid'>
  <%= flash[:success] %>

<%= yield %>

</div>



<!-- Latest compiled and minified JavaScript -->
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>

</body>
</html>
